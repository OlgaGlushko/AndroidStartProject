<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstrtLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


  <TextView
      android:id="@+id/view_1"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="view_1"
      android:textSize="24sp"
      app:layout_constraintStart_toStartOf="@+id/guideline4"
      tools:layout_editor_absoluteY="148dp" />

  <TextView
      android:id="@+id/view_2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="56dp"
      android:text="view_2"
      android:textSize="14sp"
      app:layout_constraintStart_toStartOf="@+id/guideline3"
      tools:layout_editor_absoluteY="216dp" />

  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_begin="0dp" />

  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_begin="323dp" />


  <TextView
      android:id="@+id/view_A"
      android:layout_width="114dp"
      android:layout_height="82dp"
      android:text="view A"
      app:layout_constraintStart_toStartOf="@+id/guideline3"
      tools:layout_editor_absoluteY="296dp" />

  <TextView
      android:id="@+id/view_B"
      android:layout_width="wrap_content"
      android:layout_height="0dp"
      android:text="view B"
      app:layout_constraintBottom_toTopOf="@id/view_A"
      app:layout_constraintLeft_toRightOf="@id/view_A"
      app:layout_constraintTop_toBottomOf="@id/view_A"
      app:layout_constraintVertical_bias="1.0"
      tools:layout_editor_absoluteX="29dp" />

  <TextView
      android:id="@+id/view_C"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="view C"
      app:layout_constraintLeft_toRightOf="@id/view_A"
      app:layout_constraintTop_toBottomOf="@id/view_B" />


  <TextView
      android:id="@+id/left_view"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="28dp"
      android:layout_marginTop="60dp"
      android:text="Left View"
      android:textSize="12sp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/right_view"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="52dp"
      android:text="Right View"
      android:textSize="20sp"
      app:layout_constraintBaseline_toBaselineOf="@id/left_view"
      app:layout_constraintLeft_toRightOf="@id/left_view" />

  <Button
      android:id="@+id/button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="56dp"
      android:text="Button"
      app:layout_constraintEnd_toStartOf="@id/button2"
      app:layout_constraintHorizontal_chainStyle="packed"
      app:layout_constraintStart_toStartOf="@+id/guideline2"
      tools:layout_editor_absoluteY="216dp" />

  <Button
      android:id="@+id/button2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="151dp"
      android:layout_marginEnd="16dp"
      android:text="Button2"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_chainStyle="packed"
      app:layout_constraintStart_toEndOf="@+id/button"
      tools:layout_editor_absoluteY="216dp" />
  -->


  <TextView
      android:id="@+id/view_hide1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="56dp"
      android:text="View_hide1"

      app:layout_constraintEnd_toStartOf="@+id/guideline2"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintStart_toStartOf="@+id/guideline3"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/view_hide2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="View_hide2"
      app:flow_horizontalBias="0"
      tools:layout_editor_absoluteX="112dp"
      tools:layout_editor_absoluteY="161dp" />

  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_begin="165dp" />

  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_begin="48dp" />

  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_begin="292dp" />


  <!-- app:layout_constraint{X}_to{Y}of="{Z}"

   X- это какой-то constraint привязываемой view
   Y- это сторона view   к которой мя привязались
   Z-  id view k которому мы привязались
   -->
</androidx.constraintlayout.widget.ConstraintLayout>




